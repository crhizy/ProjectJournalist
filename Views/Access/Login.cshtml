@model ProjectJournalist.ViewModels.LoginVM;

@{
    Layout = null;
}
<html>
<head>
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

</head>
<body>
    <div class="justify-content-center align-items-center d-flex container"
         style="height: 100vh;">
        <div class="row mt.5 ">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        Log In
                    </div>
                    <div class="card-body">

                        <form asp-controller="Access" asp-action="logIn" method="post">
                            <input class="form-control mb-3" type="text" placeholder="Email" required asp-for="Email" />
                            <input class="form-control mb-3" type="password" placeholder="Password" required asp-for="Password" />
                           
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">Log In</button>
                            </div>

                            @if (ViewData["Message"] != null)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @ViewData["Message"]
                                </div>
                            }
                            You don't have an account  <a asp-controller="Access" asp-action="Register"><br />  Register Now!    </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
